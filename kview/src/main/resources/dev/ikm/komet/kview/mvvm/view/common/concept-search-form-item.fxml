<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane alignment="TOP_CENTER" stylesheets="@../kview.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Region styleClass="lidr-rounded-region" />
      <VBox>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
         <children>
            <HBox alignment="CENTER" spacing="4.0">
               <children>
                  <HBox>
                     <children>
                        <TextField alignment="TOP_CENTER" prefWidth="424.0" promptText="🔍  Search" styleClass="lidr-search-device-text-input">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </TextField>
                        <Button mnemonicParsing="false" styleClass="lidr-search-button">
                           <graphic>
                              <Region focusTraversable="true">
                                 <styleClass>
                                    <String fx:value="lidr-search-button-region" />
                                    <String fx:value="icon" />
                                 </styleClass>
                              </Region>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
                  <Region styleClass="region-add">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Region>
               </children>
               <padding>
                  <Insets right="4.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</StackPane>
